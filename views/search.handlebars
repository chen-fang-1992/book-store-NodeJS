<!doctype html>
<!-- body -->
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4 class="panel-title">{{title}}</h4>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-4 col-xs-offset-4">
					<form class="form-horizontal" role="form">
						<div class="form-group">
							<label>TITLE</label>
							<input name="btitle" type="text" class="form-control" tabindex="1">
						</div>
						<div class="form-group">
							<label>AUTHOR</label>
							<input name="author" type="text" class="form-control" tabindex="2">
						</div>
						<div class="form-group">
							<label>TYPE</label>
							<input name="type" type="text" class="form-control" tabindex="3">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-lg btn-success btn-block" tabindex="4">Start Search</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{{>footer}}
</div>