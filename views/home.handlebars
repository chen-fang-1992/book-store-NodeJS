<!doctype html>
<!-- body -->
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4 class="panel-title">Search Book</h4>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-6 col-xs-offset-3">
					<div class="col-xs-3">
						<div class="dropdown">
							<button type="button" class="btn btn-primary btn-block dropdown-toggle" data-toggle="dropdown">
								<span class="placeholder">Title</span>
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu" role="menu">
								<li value="0"><a class="btn btn-link">Title</a></li>
								<li value="1"><a class="btn btn-link">Author</a></li>
								<li value="2"><a class="btn btn-link">Type</a></li>
							</ul>
						</div>
					</div>
					<div class="col-xs-9">
						<div class="input-group">
							<input type="text" class="form-control">
							<span class="input-group-btn">
								<button type="button" class="btn btn-success">Go!</button>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">Latest Search</h4>
				</div>
				<table class="table table-striped table-hover table-condensed">
					<tbody>
						{{#each lbooks}}
						<tr>
							<td><a class="btn btn-link">{{title}}</a></td>
							<input type="hidden" value="{{bid}}">
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">Most Search</h4>
				</div>
				<table class="table table-striped table-hover table-condensed">
					<tbody>
						{{#each mbooks}}
						<tr>
							<td><a class="btn btn-link">{{title}}</a></td>
							<input type="hidden" value="{{bid}}">
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>