<!doctype html>
<!-- body -->
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4 class="panel-title">{{title}}</h4>
		</div>
		{{#if books}}
		<table class="table table-striped table-hover table-condensed">
			<thead>
				<tr>
					<th><a class="btn btn-lg btn-link btn-block">Title</a></th>
					<th><a class="btn btn-lg btn-link btn-block">Number</a></th>
					<th><a class="btn btn-lg btn-link btn-block">Action</a></th>
				</tr>
			</thead>
			<tbody>
				{{#each books}}
				<tr>
					<td><a class="btn btn-link btn-block">{{title}}</a></td>
					<td><input type="number" class="number form-control" value="{{number}}"></td>
					<td><button class="btn btn-danger">Remove</button>
						<button class="btn btn-success collapse">Confirm</button></td>
					<input type="hidden" value="{{bid}}">
				</tr>
				{{/each}}
			</tbody>
		</table>
		{{/if}}
	</div>
</div>