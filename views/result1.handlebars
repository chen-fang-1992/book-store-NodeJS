<!doctype html>
<!-- body -->
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4 class="panel-title">{{title}}</h4>
		</div>
		{{#if books}}
		<table class="table table-striped table-hover table-condensed">
			<thead>
				<tr>
					<th><a class="btn btn-lg btn-link btn-block">Title</a></th>
					<th><a class="btn btn-lg btn-link btn-block">Author(s)</a></th>
					<th><a class="btn btn-lg btn-link btn-block">Type</a></th>
				</tr>
			</thead>
			<tbody>
				{{#each books}}
				<tr>
					<td><a class="btn btn-link btn-block">{{title}}</a></td>
					<td><a class="btn btn-link btn-block">{{authors}}</a></td>
					<td><a class="btn btn-link btn-block">{{publication_type}}</a></td>
					<input type="hidden" value="{{bid}}">
				</tr>
				{{/each}}
			</tbody>
		</table>
		{{>pager}}
		<input id="key" type="hidden" value="{{key}}">
		<input id="content" type="hidden" value="{{content}}">
		{{else}}
		<div class="panel-body">
			<div class="row">
				<div class="col-xs-4 col-xs-offset-4">
					<div class="alert alert-danger">
						<span>{{failMsg}}</span>
					</div>
				</div>
			</div>
		</div>
		{{/if}}
	</div>
	{{>footer}}
</div>