<!doctype html>
<html>
<head>
	<meta charset="utf-8" />
	<title>{{title}}</title>
	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" href="/stylesheets/layout.css">
</head>
<body>
	<nav class="navbar navbar-default navbar-static-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<span class="icon-bar"></span>
				<span class="navbar-brand">Book Store</span>
			</div>
			<div class="navbar-collapse collapse">
				{{#each navbar}}
				<ul class="nav navbar-nav">
					<li class="{{hp}}"><a href="/home" tabindex="-1">Home Page</a></li>
					<li class="{{as}}"><a href="/search" tabindex="-1">Advanced Search</a></li>
					<li class="{{cu}}"><a href="/contact" tabindex="-1">Contact Us</a></li>
				</ul>
				{{/each}}
				<ul class="nav navbar-nav navbar-right">
					{{#if user}}
					{{#if user.role}}
					{{#each navbar}}
					<li class="{{mp}}"><a href="/user" tabindex="-1">My Profile</a></li>
					<li class="{{sc}}"><a href="/user/cart" tabindex="-1">Shopping Cart</a></li>
					{{/each}}
					{{else}}
					{{#each navbar}}
					<li class="{{am}}"><a href="/user/admin" tabindex="-1">Management</a></li>
					{{/each}}
					{{/if}}
					<li><a href="/user/logout" tabindex="-1">Log Out</a></li>
					{{else}}
					{{#each navbar}}
					<li class="{{ru}}"><a href="/register" tabindex="-1">Register User</a></li>
					<li class="{{ul}}"><a href="/login" tabindex="-1">User Login</a></li>
					{{/each}}
					{{/if}}
				</ul>
			</div>
		</div>
	</nav>
	{{{body}}}
	<script src="/javascripts/jquery.min.js"></script>
	<script src="/javascripts/bootstrap.min.js"></script>
	{{#if js}}
	<script src="{{js}}"></script>
	{{/if}}
</body>
</html>